{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-file-line-count": [
            true,
            70
        ],
        // https://basarat.gitbooks.io/typescript/docs/tips/defaultIsBad.html
        "no-default-export": true,
        "no-require-imports": true,
        "arrow-parens": false,
        "interface-over-type-literal": false,
        "array-type": false,
        "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}